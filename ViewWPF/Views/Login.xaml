<Window x:Class="ViewWPF.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViewWPF.Views"
        mc:Ignorable="d"
        Title="Login" Height="320.301" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Column="1"
            Grid.Row="1"
            VerticalAlignment="Center">
            <Image x:Name="imgBatman" Source="/ViewWPF;component/Images/batman2.png" Height="55" Margin="38,0,37,0" />
            <TextBlock x:Name="lblLogin" Text="Login" />
            <TextBox x:Name="txtLogin"/>
            <TextBlock x:Name="lblSenha" Text="Senha"/>
            <PasswordBox x:Name="txtSenha"/>
            <Button x:Name="btnLogar" Content="Entrar" Click="btnLogar_Click" HorizontalAlignment="Right" Width="146"/>
        </StackPanel>
        <Button x:Name="btnAdd" Content="Add User" Grid.Row="2" VerticalAlignment="Top" Click="btnAdd_Click"/>
    </Grid>
</Window>
